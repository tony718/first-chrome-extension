{
  "manifest_version": 2,

  "name": "A Chrome Extension",
  "description": "My First Chrome Extension",
  "version": "1.0",

  "browser_action": {
    "default_title": "Do Something!",
    "default_icon:": "icon.png"
  },

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}